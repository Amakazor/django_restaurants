{% extends "base.j2" %}

{% block title %}
    Recenzje restauracji - Rejestracja
{% endblock title %}
{% block content %}
    <div class="container container--centered">
        <h2 class="styledForm__heading">Zarejestruj się</h2>
        {% include "components/alerts.j2" %}
        <form class="styledForm" action="/signup" method="post">
            {% csrf_token %}
            <label for="">Login</label>
            <input type="text" id="usermame" name="username" required>
            <label for="">Imię</label>
            <input type="text" id="firstname" name="firstname" required>
            <label for="">Nazwisko</label>
            <input type="text" id="lastname" name="lastname" required>
            <label for="">Email</label>
            <input type="text" id="email" name="email" required>
            <label for="">Hasło</label>
            <input type="password" id="password" name="password" required>
            <label for="">Potwierdź hasło</label>
            <input type="password" id="password2" name="password2" required>
            <button type="submit" class="button button--primary">Zarejestruj się</button>
        </form>
    </div>
{% endblock content %}